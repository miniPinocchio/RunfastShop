<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充 -->
    <solid android:color="#F4F3F3" />
    <!-- 大小 -->
    <size
        android:height="200dp"/><!-- 宽度和高度 -->
    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="#C6C1C1"
        />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="5dp" />
    <!-- 圆角 -->
    <corners
        android:radius="8dp" />

</shape>