<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.runfastshop.activity.usercenter.AddressSelectActivity">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_food_gray">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_address_list"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="47dp"
            android:background="@color/color_white"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout_add_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/text_button_background"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_add_address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增收货地址"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_address_black"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
