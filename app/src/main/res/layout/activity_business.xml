<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootview"
    tools:context="com.example.runfastshop.activity.BusinessActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/color_white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200_dp">
                <ImageView
                    android:id="@+id/iv_title_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/icon_banner"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@color/color_image_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_business_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="嗨，欢迎光临"
                            android:textSize="16sp"
                            android:textColor="@color/color_business_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:background="@color/color_white"
                        android:paddingLeft="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"/>
                        <LinearLayout
                            android:id="@+id/layout_activity_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/iv_sub_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_reduce"/>
                            <TextView
                                android:id="@+id/tv_sub_price"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="满20减3，满40减8"
                                android:layout_marginLeft="6dp"
                                android:textSize="11sp"
                                android:textColor="@color/color_text_gray_two"/>
                            <LinearLayout
                                android:id="@+id/layout_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginRight="15dp">
                                <TextView
                                    android:id="@+id/tv_activity_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3个活动"
                                    android:textSize="11sp"
                                    android:layout_marginRight="6dp"
                                    android:textColor="@color/color_text_gray"/>
                                <ImageView
                                    android:id="@+id/iv_activity_bottom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_business_bottom"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_activity_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="6dp"
                            android:gravity="bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_fracture"/>
                            <TextView
                                android:id="@+id/tv_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="活动期间：打8.8折"
                                android:layout_marginLeft="6dp"
                                android:textSize="11sp"
                                android:textColor="@color/color_text_gray_two"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp"
                            android:visibility="gone"
                            android:gravity="bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_reduce"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="满30赠送可乐一瓶"
                                android:layout_marginLeft="6dp"
                                android:textSize="11sp"
                                android:textColor="@color/color_text_gray_two"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/color_food_gray"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_order_back"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_business_logo"
                                android:layout_width="68dp"
                                android:layout_height="68dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/icon_default_head"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="9dp">
                                    <TextView
                                        android:id="@+id/tv_sale_startPay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11sp"
                                        android:textColor="@color/color_text_gray_two"/>
                                        <!--android:text="¥20起送"-->
                                    <TextView
                                        android:id="@+id/tv_sale_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11sp"
                                        android:layout_marginLeft="8dp"
                                        android:textColor="@color/color_text_gray_two"/>
                                        <!--android:text="配送费¥2"-->
                                    <TextView
                                        android:layout_width="1dp"
                                        android:layout_height="10dp"
                                        android:layout_marginLeft="3dp"
                                        android:layout_marginRight="3dp"
                                        android:background="@color/color_line_back"/>
                                    <TextView
                                        android:id="@+id/tv_business_sales_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11sp"
                                        android:textColor="@color/color_text_gray_two"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_business_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:id="@+id/tv_business_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_address_black"/>
                                    <!--android:text="肯德基宅急送"-->
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/icon_right_black"/>
                                </LinearLayout>
                                <!--android:text="月售1156单"-->
                                <TextView
                                    android:id="@+id/tv_sale_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:padding="2dp"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:textColor="@color/color_white"
                                    android:background="@drawable/icon_orange_back"/>
                            </LinearLayout>
                                    <!--android:text="快车专送·约60分钟"-->
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_margin="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_notice"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:singleLine="true"
                                android:textSize="11sp"
                                android:textColor="@color/color_text_gray_two"/>
                        </LinearLayout>
                                <!--android:text="本店欢迎您下单，用餐高峰请提前下单，谢谢！"/>-->
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                app:layout_collapseMode="pin"
                android:id="@+id/tb_collapsing_test"
                android:title="西湖小鱼庄"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        android:background="@color/color_white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_back_white"
                            />
                        <TextView
                            android:id="@+id/business_title"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#FF333333"
                            android:textSize="20sp" />
                        <ImageView
                            android:id="@+id/iv_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/icon_collection_no"/>

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:src="@drawable/icon_share"/>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/tab_background"
            android:gravity="center_horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_list_tab"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="1dp"
                android:textColor="@android:color/white"
                app:tabGravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:id="@+id/blackview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="#60000000"
        android:onClick="toggleCar"
        android:visibility="gone">
    </View>

    <include layout="@layout/view_carpop"/>

    <FrameLayout
        android:id="@+id/layout_shop_car"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/car_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="toggleCar"
            android:layout_gravity="bottom"
            android:background="@color/color_not_order_black">

            <TextView
                android:id="@+id/car_nonselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="未选购商品"
                android:textColor="#a8a8a8"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/amount_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_sale_price_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="另需配送费¥4元"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/car_limit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color_not_order_black"
                android:gravity="center"
                android:onClick="goAccount"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="¥20 起送"
                android:textColor="#a8a8a8"
                android:enabled="false"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_not_shop_car"/>

        <TextView
            android:id="@+id/car_badge"
            style="@style/badge_style"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="5dp"/>
    </FrameLayout>

    <include layout="@layout/layout_popup_product" />
</android.support.design.widget.CoordinatorLayout>
