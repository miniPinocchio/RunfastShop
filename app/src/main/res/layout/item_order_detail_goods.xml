<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30_dp">

        <TextView
            android:id="@+id/tv_order_detail_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="香辣鸡腿堡"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_50_dp"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="¥ 3"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_14_dp" />

    </RelativeLayout>

</LinearLayout>