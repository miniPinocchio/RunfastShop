<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <com.example.runfastshop.view.HeadZoomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_product_head"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="劲脆鸡腿堡"
                    android:textSize="20sp"
                    android:textColor="@color/color_address_black"
                    />
                <TextView
                    android:id="@+id/tv_food_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月售4"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color_text_gray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textSize="25sp"
                        android:textColor="@color/color_price_red"/>
                    <TextView
                        android:id="@+id/tv_food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:layout_marginLeft="20dp"
                        android:textSize="25sp"
                        android:textColor="@color/color_price_red"/>
                    <!--<ImageView-->
                        <!--android:id="@+id/iv_sub"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:visibility="invisible"-->
                        <!--android:src="@drawable/icon_delete_product"/>-->
                    <!--<TextView-->
                        <!--android:id="@+id/tv_product_count"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:textSize="15sp"-->
                        <!--android:textColor="@color/color_price_red"/>-->
                    <!--<ImageView-->
                        <!--android:id="@+id/iv_add"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/icon_add_product"/>-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <com.example.runfastshop.view.AddWidget
                            android:id="@+id/add_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            />
                        <RelativeLayout
                            android:id="@+id/layout_detail_spec"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_centerInParent="true">
                            <TextView
                                android:id="@+id/tv_detail_spec"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:text="选规格"
                                android:layout_alignParentBottom="true"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textColor="@color/color_white"
                                android:background="@drawable/spec_background"
                                />
                            <TextView
                                android:id="@+id/tv_detail_spec_num"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:text="1"
                                android:visibility="gone"
                                android:textSize="10sp"
                                android:textColor="@color/color_white"
                                android:gravity="center"
                                android:layout_alignRight="@id/tv_detail_spec"
                                android:background="@drawable/circle_red"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/color_line_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="@dimen/dimen_3_dp"
                    android:layout_height="15dp"
                    android:background="@color/color_orange_select"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/color_address_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共有2个评价"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/color_text_gray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_praise_back"/>
                    <ImageView
                        android:id="@+id/iv_praise"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_praise"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/iv_praise"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/icon_praise_point"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="好评率50%"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_two"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_food_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="@dimen/dimen_3_dp"
                    android:layout_height="15dp"
                    android:background="@color/color_orange_select"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品描述"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/color_address_black"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价共有2个评价"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="70dp"
                android:textColor="@color/color_text_gray_two"
                />
        </LinearLayout>
    </com.example.runfastshop.view.HeadZoomScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_product_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_back_white"
            />
        <TextView
            android:id="@+id/business_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_share_product"/>
    </LinearLayout>
</RelativeLayout>