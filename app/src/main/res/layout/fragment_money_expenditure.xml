<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.runfastshop.fragment.walletfragmnet.MoneyExpenditureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:src="@drawable/icon_not_balance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无余额收支明细"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:textColor="@color/color_text_gray_two"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_money_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/color_food_gray"/>
</FrameLayout>
