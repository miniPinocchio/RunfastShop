<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="WelcomeEntranceActionBarTheme" parent="NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/ic_launcher_bg</item>
    </style>

    <style name="MainTabItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/navigation_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_drawable</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>

    </style>

    <style name="badge_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:minWidth">14dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/badge_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="dialogStyle" parent="android:Animation"/>
    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>
    <!--灰色保存按钮-->
    <style name="save_button">
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/shape_button_pay</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="order_detail_left">
        <item name="android:textSize">@dimen/dimen_14_dp</item>
        <item name="android:textColor">@color/order_detail_state</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15_dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_19_dp</item>
    </style>

    <style name="order_detail_right">
        <item name="android:textSize">@dimen/dimen_14_dp</item>
        <item name="android:textColor">@color/order_detail_text_right</item>
        <item name="android:layout_marginRight">@dimen/dimen_15_dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_19_dp</item>
    </style>
</resources>
